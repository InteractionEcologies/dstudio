<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/BoldText"
        android:text="@string/title_activity_answer_questions"
        android:layout_marginLeft="6dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textSize="16sp" />

    <TextView
        style="@style/NormalText"
        android:id="@+id/first_question"
        android:layout_marginLeft="6dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/first_question_data"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:singleLine="false"
        android:layout_height="200dp" />

    <TextView
        style="@style/NormalText"
        android:id="@+id/second_question"
        android:layout_marginLeft="6dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/second_question_data"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:singleLine="false"
        android:layout_height="200dp" />

    <RelativeLayout
        android:layout_below="@id/second_question_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rejectButton"
            android:src="@drawable/reject"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/acceptButton"
            android:src="@drawable/accept"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>