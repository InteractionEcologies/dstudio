<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:switchMinWidth">50dp</item>
        <item name="android:colorBackground">#FFF</item>
        <item name="android:popupMenuStyle">@style/MenuStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>


    <!--Styles for bold text-->
    <style name="BoldText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldPrimaryColorText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldBlackColorText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--Styles for normal text-->
    <style name="NormalText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="NormalBoldText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalAccentText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="NormalLargeText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="NormalXLargeText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18dp</item>
    </style>



    <!--Styles for sub text-->
    <style name="SubText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="HintText">
        <item name="android:textColor">@color/common_plus_signin_btn_text_dark_pressed</item>
        <item name="android:textSize">12dp</item>
    </style>

    <!--Styles for login screen text-->
    <style name="LoginCreateTextButton">
        <item name="android:textSize">@dimen/login_buttons_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="LoginCreateText">
        <item name="android:textSize">@dimen/login_buttons_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="LoginDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="MenuStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:popupBackground">@color/black</item>
    </style>

    <style name="PreferencesTheme">
        <item name="android:windowBackground">@drawable/bg2</item>
        <item name="android:background">@drawable/bg2</item>
    </style>

</resources>
